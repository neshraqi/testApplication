<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity222"
    android:orientation="vertical"
    android:background="@color/colorbackground"
    android:gravity="center">



    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_toor"
        android:tint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="top">

            <LinearLayout
                android:id="@+id/ll_train"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_Train"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_train2"
                        android:layout_gravity="center"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/train"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_bus2"
                        android:layout_gravity="center"
                        android:tint="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/bus"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_flight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_flight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_plane"
                        android:layout_gravity="center"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/flight"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/ll_tour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">

                    <ImageView
                        android:id="@+id/ivToor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_toor"
                        android:layout_gravity="center"
                        android:padding="1dp"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="@string/tour"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center">


                    <ImageView
                        android:id="@+id/iv_hotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_hotel2"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/hotel"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="@drawable/background">

    </LinearLayout>

</LinearLayout>